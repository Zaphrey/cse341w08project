{
  "swagger": "2.0",
  "info": {
    "title": "Movie Reviewer",
    "description": "An api for a service similar to IMDB or Letterboxd.",
    "version": "1.0.0"
  },
  "host": "cse341w08project.onrender.com",
  "basePath": "/",
  "schemes": [
    "https"
  ],
  "paths": {
    "/user": {
      "post": {
        "description": "Sends a request to create a new user in the database.",
        "produces": [
          "text/html"
        ],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "username": {
                  "example": "TopReviews12",
                  "required": true
                },
                "password": {
                  "example": "$wissCheese3011",
                  "required": true
                },
                "email": {
                  "example": "topreviews12@gmail.com",
                  "required": true
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad Request"
          },
          "422": {
            "description": "Unprocessable Content"
          }
        }
      },
      "get": {
        "description": "Gets a complete list of all the users.",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },
    "/user/{id}": {
      "get": {
        "description": "Get the data of a user with from the specified ID",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "number"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "422": {
            "description": "Unprocessable Content"
          }
        }
      },
      "put": {
        "description": "Updates the data of a user from the specified ID with the included information.",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "username",
            "in": "query",
            "type": "string"
          },
          {
            "name": "password",
            "in": "query",
            "type": "string"
          },
          {
            "name": "email",
            "in": "query",
            "type": "string"
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad Request"
          },
          "422": {
            "description": "Unprocessable Content"
          }
        }
      },
      "delete": {
        "description": "Deletes the user data from the specified ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "204": {
            "description": "No Content"
          },
          "400": {
            "description": "Bad Request"
          },
          "422": {
            "description": "Unprocessable Content"
          }
        }
      }
    }
  }
}